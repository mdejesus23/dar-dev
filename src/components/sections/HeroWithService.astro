---
import { Image } from 'astro:assets';
import Rectangle from '@/images/shapes/rectangle-1.png';
import DiagonalArrowWhite from '@/images/icons/diagonal-arrow-white.png';
import DiagonalArrowAccent from '@/images/icons/diagonal-arrow-accent.png';
import Button from '@/components/ui/Button.astro';
import Services from '@/components/sections/Services.astro';
import GradientOverlay2 from '@/components/ui/GradientOverlay2.astro';

// Background images
import backgroundImage from '@/images/employees-working-together-side-view.jpg';
import WaveObject from '@/images/object.png';

// Right columns images
import WebApplicationsIcon from '@/images/icons/web-app.png';
import IntegrationIcon from '@/images/icons/integration.png';
import AutomationIcon from '@/images/icons/automation.png';
---

<section class="relative min-h-screen py-40">
  <!-- Gradient Overlay -->
  <GradientOverlay2 />
  <!-- Background Image -->
  <div class="absolute inset-0 z-0">
    <Image
      src={backgroundImage}
      alt="Background"
      class="h-full w-full object-cover"
      loading="eager"
    />
  </div>

  <!-- Wave Object -->
  <div class="absolute top-0 left-0 z-15 hidden h-auto w-full md:block">
    <Image
      src={WaveObject}
      alt="Wave Object"
      class="h-auto w-full object-contain object-top"
      loading="eager"
    />
  </div>

  <!-- Content -->
  <div class="relative z-20">
    <!-- <Header /> -->

    <div class="container mx-auto overflow-visible px-4 py-10 lg:px-8 lg:py-32">
      <div class="grid grid-cols-1 items-center gap-12 lg:grid-cols-5">
        <!-- Left Column: Main Content -->
        <div class="space-y-8 lg:col-span-3">
          <!-- Eyebrow Text -->
          <p
            class="font-body text-md font-bold tracking-wider text-white uppercase"
          >
            GROW YOUR BUSINESS WITH
          </p>

          <!-- Main Headline -->
          <h1
            class="text-primary text-4xl leading-tight font-bold lg:text-6xl xl:text-7xl"
          >
            Tailored Software Solutions
          </h1>

          <Image
            src={Rectangle}
            alt="Decorative Rectangle"
            class="w-full max-w-180"
          />

          <!-- Description -->
          <p
            class="font-supporting max-w-180 text-lg leading-relaxed text-gray-300 lg:text-xl"
          >
            We help small and medium-sized businesses streamline operations and
            reach their full potential through custom web applications,
            automation, and systems integration.
          </p>

          <!-- CTA Buttons -->
          <div class="flex flex-col items-start gap-4 pt-4">
            <Button
              href="/get-started"
              class="border-white text-white"
              variant="outline"
              size="sm"
            >
              START YOUR PROJECT
              <Image
                src={DiagonalArrowWhite}
                alt="Arrow Icon"
                class="ml-2 h-3 w-3"
              />
            </Button>
            <Button href="/services" variant="outline" size="sm">
              EXPLORE SERVICES
              <Image
                src={DiagonalArrowAccent}
                alt="Arrow Icon"
                class="ml-2 h-3 w-3"
              />
            </Button>
          </div>
        </div>

        <!-- Right Column: Desktop Services Grid -->
        <div
          class="relative hidden min-h-0 md:block md:min-h-100 lg:col-span-2 lg:min-h-120"
        >
          <!-- Service Card 1: Web Applications -->
          <div
            class="bg-dark-blue flex w-[20rem] flex-col items-center justify-center border-b-2 border-l-2 border-white py-4 lg:absolute lg:top-0 lg:left-0"
          >
            <div class="flex items-start gap-4">
              <div class="flex shrink-0 flex-col items-center justify-center">
                <Image src={WebApplicationsIcon} alt="Web Applications Icon" />
              </div>
              <div class="flex flex-col">
                <h3 class="text-xl font-semibold text-white">
                  WEB APPLICATIONS
                </h3>
                <p class="text-gray-400">Custom Solutions</p>
              </div>
            </div>
          </div>

          <!-- Service Card 2: Integration -->
          <div
            class="bg-dark-blue mt-8 flex w-[20rem] flex-col items-center justify-center border-b-2 border-l-2 border-white py-4 lg:absolute lg:top-1/2 lg:right-4 lg:mt-0 lg:-translate-y-1/2"
          >
            <div class="flex items-start gap-4">
              <div class="flex shrink-0 flex-col items-center justify-center">
                <Image src={IntegrationIcon} alt="Integration Icon" />
              </div>
              <div class="flex flex-col">
                <h3 class="text-xl font-semibold text-white">INTEGRATION</h3>
                <p class="text-gray-400">Connect Systems</p>
              </div>
            </div>
          </div>

          <!-- Service Card 3: Automation -->
          <div
            class="bg-dark-blue mt-8 flex w-[20rem] flex-col items-center justify-center border-b-2 border-l-2 border-white py-4 lg:absolute lg:bottom-0 lg:left-8 lg:mt-0"
          >
            <div class="flex items-start gap-4">
              <div class="shrink-0">
                <Image src={AutomationIcon} alt="Automation Icon" />
              </div>
              <div class="flex flex-col">
                <h3 class="text-xl font-semibold text-white">AUTOMATION</h3>
                <p class="text-gray-400">Streamline Processes</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Right Column: Mobile Services Grid -->
        <div class="relative block h-[500px] w-full md:hidden">
          <!-- Service Card 1: Web Applications -->
          <div
            class="bg-dark-blue absolute top-10 right-2 flex h-34 w-40 flex-col items-start justify-center border-2 border-white p-4 shadow-lg"
          >
            <div class="flex flex-col items-start gap-3">
              <div class="flex shrink-0 flex-col items-center justify-center">
                <Image
                  src={WebApplicationsIcon}
                  alt="Web Applications Icon"
                  class="h-10 w-10"
                />
              </div>
              <div class="flex flex-col">
                <h3
                  class="font-headline text-sm leading-tight font-bold text-white"
                >
                  WEB APPLICATIONS
                </h3>
                <p class="font-supporting mt-1 text-xs text-gray-400">
                  Custom Solutions
                </p>
              </div>
            </div>
          </div>

          <!-- Service Card 2: Integration -->
          <div
            class="bg-dark-blue absolute top-44 left-0 flex h-34 w-40 flex-col items-start justify-center border-2 border-white p-4 shadow-lg"
          >
            <div class="flex flex-col items-start gap-3">
              <div class="flex shrink-0 flex-col items-center justify-center">
                <Image
                  src={IntegrationIcon}
                  alt="Integration Icon"
                  class="h-10 w-10"
                />
              </div>
              <div class="flex flex-col">
                <h3
                  class="font-headline text-sm leading-tight font-bold text-white"
                >
                  INTEGRATION
                </h3>
                <p class="font-supporting mt-1 text-xs text-gray-400">
                  Connect Systems
                </p>
              </div>
            </div>
          </div>

          <!-- Service Card 3: Automation -->
          <div
            class="bg-dark-blue absolute top-84 right-15 bottom-0 flex h-34 w-40 flex-col items-start justify-center border-2 border-white p-4 shadow-lg"
          >
            <div class="flex flex-col items-start gap-3">
              <div class="shrink-0">
                <Image
                  src={AutomationIcon}
                  alt="Automation Icon"
                  class="h-10 w-10"
                />
              </div>
              <div class="flex flex-col">
                <h3
                  class="font-headline text-sm leading-tight font-bold text-white"
                >
                  AUTOMATION
                </h3>
                <p class="font-supporting mt-1 text-xs text-gray-400">
                  Streamline Processes
                </p>
              </div>
            </div>
          </div>

          <!-- Wave Object -->
          <div class="absolute top-0 left-0 z-15 block h-auto w-full md:hidden">
            <Image
              src={WaveObject}
              alt="Wave Object"
              class="h-auto w-full object-contain object-top"
              loading="eager"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- insert services component at the bottom of this section -->
  <Services />
</section>
