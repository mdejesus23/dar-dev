---
interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<article
  class:list={[
    'prose prose-invert max-w-none',
    'prose-headings:font-headline prose-headings:font-semibold prose-headings:tracking-tight',
    'prose-h1:text-4xl prose-h2:text-3xl prose-h3:text-2xl prose-h4:text-xl prose-h5:text-lg prose-h6:text-base',
    'prose-h1:text-white prose-h2:text-white prose-h3:text-white prose-h4:text-white prose-h5:text-white prose-h6:text-white',
    'prose-p:leading-relaxed prose-p:text-gray-200 prose-p:font-supporting',
    'prose-a:text-primary prose-a:no-underline prose-a:underline-offset-4 hover:prose-a:underline hover:prose-a:opacity-80',
    'prose-strong:font-semibold prose-strong:text-white',
    'prose-em:font-medium prose-em:text-gray',
    'prose-code:rounded-md prose-code:bg-dark prose-code:px-1.5 prose-code:py-0.5 prose-code:font-accent prose-code:text-primary prose-code:before:content-none prose-code:after:content-none',
    'prose-pre:rounded-xl prose-pre:border prose-pre:border-gray prose-pre:bg-dark',
    'prose-li:font-body prose-li:text-white prose-li:marker:text-primary',
    'prose-ol:pl-5 prose-ul:pl-5',
    'prose-img:rounded-xl prose-img:border prose-img:border-gray',
    'prose-blockquote:bg-medium-blue/20 prose-blockquote:rounded-r-lg prose-blockquote:border-l-4 prose-blockquote:border-l-primary prose-blockquote:py-2 prose-blockquote:pl-4 prose-blockquote:not-italic prose-blockquote:text-white',
    'prose-hr:border-gray',
    className,
  ]}
>
  <slot />
</article>
