---
import { Image } from 'astro:assets';
import logo from '../../images/dar-dev-logo.png';
import Button from '@/components/ui/Button.astro';
---

<header class="w-full bg-transparent">
  <div class="container mx-auto px-4 lg:px-8">
    <div class="flex items-center justify-between py-6">
      <!-- Logo -->
      <div class="shrink">
        <a href="/" class="block">
          <Image
            src={logo}
            alt="dar.dev Logo"
            class="h-8 w-auto md:h-10"
            width={200}
            height={48}
          />
        </a>
      </div>

      <!-- Navigation Links (Center) -->
      <nav class="hidden items-center space-x-8 text-xl font-medium md:flex">
        <a
          href="/services"
          class="font-body hover:text-primary text-white transition-colors duration-200"
        >
          Services
        </a>
        <a
          href="/about"
          class="font-body hover:text-primary text-white transition-colors duration-200"
        >
          About
        </a>
        <a
          href="/industries"
          class="font-body hover:text-primary text-white transition-colors duration-200"
        >
          Industries
        </a>
        <a
          href="/contact"
          class="font-body hover:text-primary text-white transition-colors duration-200"
        >
          Contact
        </a>
      </nav>

      <!-- CTA Button (Right) -->
      <div class="flex items-center space-x-4">
        <div class="hidden lg:block">
          <Button size="md" href="/get-started">Get Started</Button>
        </div>

        <!-- Mobile Menu Button -->
        <button
          id="mobile-menu-button"
          class="hover:text-primary text-white focus:outline-none md:hidden"
          aria-label="Toggle mobile menu"
        >
          <svg
            class="h-6 w-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Navigation Overlay -->
  <div
    id="mobile-menu"
    class="fixed inset-0 z-50 hidden bg-[#2C3E50] md:hidden"
  >
    <div class="flex h-full flex-col p-6">
      <!-- Close Button -->
      <div class="flex justify-end">
        <button
          id="mobile-menu-close"
          class="hover:text-primary text-white focus:outline-none"
          aria-label="Close mobile menu"
        >
          <svg
            class="h-8 w-8"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>

      <!-- Navigation Links -->
      <nav class="flex flex-1 flex-col justify-start space-y-6 pt-12">
        <a
          href="/services"
          class="hover:text-primary border-b border-white/20 pb-6 text-xl font-medium text-white transition-colors duration-200"
        >
          Services
        </a>
        <a
          href="/industries"
          class="hover:text-primary border-b border-white/20 pb-6 text-xl font-medium text-white transition-colors duration-200"
        >
          Industries
        </a>
        <a
          href="/about"
          class="hover:text-primary border-b border-white/20 pb-6 text-xl font-medium text-white transition-colors duration-200"
        >
          About
        </a>
        <a
          href="/contact"
          class="hover:text-primary border-b border-white/20 pb-6 text-xl font-medium text-white transition-colors duration-200"
        >
          Contact
        </a>
      </nav>
    </div>
  </div>
</header>

<script>
  import '@/scripts/mobile-toggle';
</script>
