---
import Meta from '@/components/global/Meta.astro';
import Header from '@/components/global/Header.astro';
import { Image } from 'astro:assets';
import backgroundImage from '@/images/employees-working-together-side-view.jpg';

import '@/styles/global.css';
// fonts
import '@fontsource-variable/ibm-plex-sans'; // Supports weights 100-700
import '@fontsource/questrial';
import '@fontsource/space-mono';

interface Props {
  title: string;
  meta?: string;
  structuredData?: object;
}

const { title, meta, structuredData } = Astro.props as Props;
const pageTitle = (title ?? '')
  .replace(/<[^>]*>/g, ' ')
  .replace(/\s+/g, ' ')
  .trim();
---

<!doctype html>
<html lang="en">
  <head>
    <Meta title={pageTitle} meta={meta} structuredData={structuredData} />
    <title>{pageTitle}</title>
  </head>
  <body>
    <main class="relative min-h-screen pb-20">
      <!-- Background Image -->
      <div class="absolute inset-0 z-0">
        <Image
          src={backgroundImage}
          alt="Background"
          class="h-full w-full object-cover"
          loading="eager"
        />
      </div>

      <!-- Gradient Overlay -->
      <div
        class="absolute inset-0 z-10"
        style={{
          background:
            'linear-gradient(180deg, rgba(26, 31, 46, 0.85) 0%, rgba(26, 31, 46, 0.95) 100%)',
        }}
      >
      </div>

      <!-- Content -->
      <div class="relative z-20">
        <Header />
        <slot />
      </div>
    </main>
  </body>
</html>
