---
import Meta from '@/components/global/Meta.astro';
import Header from '@/components/global/Header.astro';
import Footer from '@/components/global/Footer.astro';
import MobileNav from '@/components/global/MobileNav.astro';

// fonts
import '@fontsource-variable/ibm-plex-sans'; // Supports weights 100-700
import '@fontsource/questrial';
import '@fontsource/space-mono';

// global styles
import '@/styles/global.css';

interface Props {
  title: string;
  meta?: string;
  structuredData?: object;
}

const { title, meta, structuredData } = Astro.props as Props;
const pageTitle = (title ?? '')
  .replace(/<[^>]*>/g, ' ')
  .replace(/\s+/g, ' ')
  .trim();
---

<!doctype html>
<html lang="en">
  <head>
    <Meta title={pageTitle} meta={meta} structuredData={structuredData} />
    <title>{pageTitle}</title>
  </head>
  <body>
    <!-- Mobile Navigation Overlay -->
    <MobileNav />
    <main class="relative min-h-screen">
      <div class="pointer-events-none absolute inset-x-0 top-0 z-50">
        <div class="pointer-events-auto">
          <Header />
        </div>
      </div>

      <slot />
    </main>
    <Footer />

    <script>
      import '@/scripts/mobile-toggle';
    </script>
  </body>
</html>
