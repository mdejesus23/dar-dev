---
import MainLayout from '@/layouts/MainLayout.astro';
import HeroWithService from '@/components/home/HeroWithService.astro';

const title = 'dar.dev - Custom Software & Web Solutions';
const description =
  'Dar.Dev provides tailored software solutions, web applications, automation, and integrations to help businesses grow efficiently.';
const ISPARTOF = {
  '@type': 'Organization',
  name: 'Dar.Dev',
  url: 'https://dar.dev',
};
---

<MainLayout
  title={title}
  structuredData={{
    '@context': 'https://schema.org',
    '@type': 'WebPage',
    '@id': 'https://dar.dev',
    url: 'https://dar.dev',
    name: title,
    description: description,
    isPartOf: ISPARTOF,
    inLanguage: 'en-US',
  }}
  meta={description}
>
  <HeroWithService />
</MainLayout>
