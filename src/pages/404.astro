---
import MainLayout from '@/layouts/MainLayout.astro';
import Button from '@/components/ui/Button.astro';
import { Image } from 'astro:assets';
import DiagonalArrowWhite from '@/images/icons/diagonal-arrow-white.png';
import GradientOverlay from '@/components/ui/GradientOverlay.astro';
import { ISPARTOF } from '@/data/constants';

const title = '404 - Page Not Found | dar.dev';
const description =
  'The page you are looking for could not be found. Return to our homepage to explore our custom software solutions and web development services.';
---

<MainLayout
  title={title}
  structuredData={{
    '@context': 'https://schema.org',
    '@type': 'WebPage',
    '@id': 'https://dar.dev/404',
    url: 'https://dar.dev/404',
    name: title,
    description: description,
    isPartOf: ISPARTOF,
    inLanguage: 'en-US',
  }}
  meta={description}
>
  <section class="relative flex min-h-screen items-center justify-center py-20">
    <GradientOverlay />
    <!-- Content -->
    <div class="relative z-50 w-full">
      <div class="container mx-auto px-4 lg:px-8">
        <div class="mx-auto max-w-3xl text-center">
          <!-- 404 Number -->
          <div class="mb-8">
            <h1
              class="text-primary mb-4 text-8xl leading-none font-bold lg:text-9xl"
            >
              404
            </h1>
            <div class="bg-primary mx-auto h-1 w-32"></div>
          </div>

          <!-- Error Message -->
          <div class="mb-12 space-y-6">
            <h2 class="font-headline text-3xl font-bold text-white lg:text-4xl">
              Page Not Found
            </h2>
            <p
              class="font-supporting mx-auto max-w-2xl text-lg leading-relaxed text-gray-300 lg:text-xl"
            >
              Oops! The page you're looking for seems to have wandered off into
              the digital void. Don't worryâ€”we'll help you find your way back.
            </p>
          </div>

          <!-- CTA Buttons -->
          <div
            class="flex flex-col items-center justify-center gap-4 sm:flex-row"
          >
            <Button
              href="/"
              class="border-white text-white"
              variant="outline"
              size="sm"
            >
              GO TO HOMEPAGE
              <Image
                src={DiagonalArrowWhite}
                alt="Arrow Icon"
                class="ml-2 h-3 w-3"
              />
            </Button>
            <Button
              href="/services"
              class="text-primary border-primary"
              variant="outline"
              size="sm"
            >
              EXPLORE SERVICES
            </Button>
          </div>

          <!-- Additional Help Text -->
          <div class="mt-12">
            <p class="font-body text-sm text-gray-400">
              Looking for something specific?{' '}
              <a
                href="/"
                class="text-primary font-medium transition-colors hover:underline"
              >
                Start from the beginning
              </a>{' '}
              or check out our services to see how we can help your business grow.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</MainLayout>
