---
import MainLayout from '../../layouts/MainLayout.astro';
import GradientOverlay2 from '@/components/ui/GradientOverlay2.astro';
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import { Image } from 'astro:assets';
import Rectangle from '@/images/shapes/rectangle-1.png';
import { ISPARTOF } from '@/data/constants';

// Background images
import backgroundImage from '@/images/service-hero-image.jpg';

const industries: CollectionEntry<'industries'>[] = (
  await getCollection('industries')
).sort((a, b) => (a.data.order ?? 0) - (b.data.order ?? 0));

const title = 'Our industries - dar.dev';
const description =
  'Explore our comprehensive range of software development industries including web applications, mobile apps, consulting, automation, and more.';
---

<MainLayout
  title={title}
  structuredData={{
    '@context': 'https://schema.org',
    '@type': 'WebPage',
    '@id': 'https://dar.dev/industries',
    url: 'https://dar.dev/industries',
    name: title,
    description: description,
    isPartOf: ISPARTOF,
    inLanguage: 'en-US',
  }}
  meta={description}
>
  <!-- Hero Section -->
  <section class="relative h-170 w-full overflow-hidden md:min-h-140">
    <!-- Background Image -->
    <div class="absolute inset-0 z-0">
      <Image
        src={backgroundImage}
        alt="Our industries"
        class="h-full w-full object-cover"
        loading="eager"
      />
    </div>

    <!-- Gradient Overlay -->
    <GradientOverlay2 />

    <!-- Hero Content -->
    <div class="relative z-20 flex min-h-200 items-center">
      <div class="container mx-auto px-4 py-10 lg:px-8 lg:py-20">
        <div class="max-w-4xl space-y-6">
          <!-- Heading -->
          <h1 class="font-headline text-5xl font-bold text-white lg:text-7xl">
            Our
            <span class="text-accent">industries</span>
          </h1>

          <Image
            src={Rectangle}
            alt="Decorative Rectangle"
            class="w-full max-w-140"
          />

          <!-- Description -->
          <p class="font-supporting max-w-140 text-lg text-gray-300 lg:text-xl">
            Dar.Dev provides focused industries that cover the full lifecycle of
            a software productâ€”from structure and design to development and
            infrastructure. Each service works independently, or together as a
            complete system.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- industries Grid Section -->
  <section class="bg-deep relative z-50 pb-30 lg:pb-40">
    <div class="container mx-auto px-4 lg:px-8">
      <!-- industries Grid -->
      <div class="flex flex-wrap justify-center gap-4 sm:gap-6 xl:gap-8">
        {
          industries.map((service) => (
            <a
              href={`/industries/${service.id}`}
              class="group hover:border-accent hover:bg-dark/30 relative flex aspect-square w-[calc(50%-0.5rem)] flex-col items-start justify-center border-2 border-white p-4 transition-all duration-300 sm:w-[calc(50%-0.75rem)] sm:p-6 md:w-[calc(33.333%-1rem)] lg:w-[calc(25%-1.125rem)] lg:p-8 xl:w-[calc(25%-1.5rem)]"
            >
              {/* Service Icon */}
              <div class="mb-3 h-10 w-10 sm:mb-4 sm:h-12 sm:w-12 lg:mb-6 lg:h-16 lg:w-16">
                <Image
                  src={service.data.icon}
                  alt={`${service.data.name} icon`}
                  class="h-full w-full object-contain transition-transform duration-300 group-hover:scale-110"
                />
              </div>

              {/* Service Title */}
              <h3 class="font-headline text-base font-semibold text-white sm:text-lg lg:text-xl">
                {service.data.name}
              </h3>
            </a>
          ))
        }
      </div>
    </div>
  </section>
</MainLayout>
