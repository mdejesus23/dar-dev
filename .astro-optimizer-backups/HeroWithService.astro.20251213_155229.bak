---
import { Image } from 'astro:assets';
import Rectangle from '@/images/shapes/rectangle.svg';
import DiagonalArrowWhite from '@/images/icons/diagonal-arrow-white.png';
import DiagonalArrowAccent from '@/images/icons/diagonal-arrow-accent.png';
import Button from '@/components/ui/Button.astro';
import Services from '@/components/services/Services.astro';
import GradientOverlay2 from '@/components/ui/GradientOverlay2.astro';

// Background images
import backgroundImage from '@/images/employees-working-together-side-view.jpg';
import WaveObject from '@/images/object.png';

// Right columns images
import WebApplicationsIcon from '@/images/icons/web-app.png';
import IntegrationIcon from '@/images/icons/integration.png';
import AutomationIcon from '@/images/icons/automation.png';
---

<section class="relative min-h-screen pt-40 pb-0 lg:py-40">
  <!-- Gradient Overlay -->
  <GradientOverlay2 />
  <!-- Background Image -->
  <div class="absolute inset-0 z-0">
    <img
      src={backgroundImage.src}
      alt="Background"
      class="h-200 w-full object-cover md:h-full"
      loading="eager"
    />
  </div>

  <!-- Wave Object -->
  <div class="absolute top-0 left-0 z-15 hidden h-auto w-full md:block">
    <Image
      src={WaveObject}
      alt="Wave Object"
      class="h-auto w-full object-contain object-top"
      loading="eager"
    />
  </div>

  <!-- Content -->
  <div class="relative z-50">
    <!-- <Header /> -->

    <div class="container mx-auto overflow-visible px-4 py-10 lg:px-8 lg:py-32">
      <div class="grid grid-cols-1 items-center gap-4 lg:grid-cols-5 lg:gap-12">
        <!-- Left Column: Main Content -->
        <div class="space-y-8 lg:col-span-3">
          <div>
            <!-- Eyebrow Text -->
            <p
              class="font-body text-lg font-bold tracking-wider text-white uppercase lg:text-2xl"
            >
              GROW YOUR BUSINESS WITH
            </p>

            <!-- Main Headline -->
            <h1
              class="text-primary text-4xl leading-tight font-bold lg:text-8xl"
            >
              Tailored Software Solutions
            </h1>

            <Image
              src={Rectangle}
              alt="Decorative Rectangle"
              class="w-full max-w-216"
            />
          </div>

          <!-- Description -->
          <p
            class="font-supporting max-w-200 text-lg leading-relaxed text-gray-300 lg:text-2xl"
          >
            We help small and medium-sized businesses streamline operations and
            reach their full potential through custom web applications,
            automation, and systems integration.
          </p>

          <!-- CTA Buttons -->
          <div class="flex flex-col items-start gap-4 lg:pt-4">
            <Button
              href="/get-started"
              class="border-white text-white"
              variant="outline"
              size="sm"
            >
              START YOUR PROJECT
              <Image
                src={DiagonalArrowWhite}
                alt="Arrow Icon"
                class="ml-2 h-3 w-3"
              />
            </Button>
            <Button href="/services" variant="outline" size="sm">
              EXPLORE SERVICES
              <Image
                src={DiagonalArrowAccent}
                alt="Arrow Icon"
                class="ml-2 h-3 w-3"
              />
            </Button>
          </div>
        </div>

        <!-- Right Column: Desktop Services Grid -->
        <div class="relative hidden h-full md:block lg:col-span-2">
          <!-- Service Card 1: Web Applications -->
          <a
            href="/services/web-applications"
            class="bg-dark-blue hover:border-primary flex w-[20rem] flex-col items-start justify-center border-b-2 border-l-2 border-white px-4 py-4 transition-all lg:absolute lg:top-[25] lg:left-10"
          >
            <div class="flex items-start gap-4">
              <div class="flex shrink-0 flex-col items-center justify-center">
                <Image src={WebApplicationsIcon} alt="Web Applications Icon" />
              </div>
              <div class="flex flex-col">
                <h3 class="text-xl font-semibold text-white">
                  WEB APPLICATIONS
                </h3>
                <p class="text-gray-400">Custom Solutions</p>
              </div>
            </div>
          </a>

          <!-- Service Card 2: Integration -->
          <a
            href="/services/systems-integration"
            class="bg-dark-blue hover:border-primary mt-8 flex w-[20rem] flex-col items-start justify-center border-b-2 border-l-2 border-white px-4 py-4 transition-all lg:absolute lg:top-1/2 lg:right-4 lg:mt-0 lg:-translate-y-1/2"
          >
            <div class="flex items-start gap-4">
              <div class="flex shrink-0 flex-col items-center justify-center">
                <Image src={IntegrationIcon} alt="Integration Icon" />
              </div>
              <div class="flex flex-col">
                <h3 class="text-xl font-semibold text-white">INTEGRATION</h3>
                <p class="text-gray-400">Connect Systems</p>
              </div>
            </div>
          </a>

          <!-- Service Card 3: Automation -->
          <a
            href="/services/process-automation"
            class="bg-dark-blue hover:border-primary mt-8 flex w-[20rem] flex-col items-start justify-center border-b-2 border-l-2 border-white px-4 py-4 transition-all lg:absolute lg:bottom-0 lg:left-30 lg:mt-0"
          >
            <div class="flex items-start gap-4">
              <div class="flex shrink-0 flex-col items-center justify-center">
                <Image src={AutomationIcon} alt="Automation Icon" />
              </div>
              <div class="flex flex-col">
                <h3 class="text-xl font-semibold text-white">AUTOMATION</h3>
                <p class="text-gray-400">Streamline Processes</p>
              </div>
            </div>
          </a>
        </div>

        <!-- Right Column: Mobile Services Grid -->
        <div class="relative block h-90 w-full md:hidden lg:h-125">
          <!-- Service Card 1: Web Applications -->
          <a
            href="/services/web-applications"
            class="bg-dark-blue hover:border-primary absolute top-26 right-2 flex h-32 w-38 flex-col items-start justify-center border-2 border-white px-4 py-4 shadow-lg transition-all"
          >
            <div class="flex flex-col items-start gap-3">
              <div class="flex shrink-0 flex-col items-center justify-center">
                <Image
                  src={WebApplicationsIcon}
                  alt="Web Applications Icon"
                  class="h-10 w-10"
                />
              </div>
              <div class="flex flex-col">
                <h3
                  class="font-headline text-sm leading-tight font-bold text-white"
                >
                  WEB APPLICATIONS
                </h3>
                <p class="font-supporting mt-1 text-xs text-gray-400">
                  Custom Solutions
                </p>
              </div>
            </div>
          </a>

          <!-- Service Card 2: Integration -->
          <a
            href="/services/systems-integration"
            class="bg-dark-blue hover:border-primary absolute top-44 left-0 flex h-32 w-38 flex-col items-start justify-center border-2 border-white px-4 py-4 shadow-lg transition-all"
          >
            <div class="flex flex-col items-start gap-3">
              <div class="flex shrink-0 flex-col items-center justify-center">
                <Image
                  src={IntegrationIcon}
                  alt="Integration Icon"
                  class="h-10 w-10"
                />
              </div>
              <div class="flex flex-col">
                <h3
                  class="font-headline text-sm leading-tight font-bold text-white"
                >
                  INTEGRATION
                </h3>
                <p class="font-supporting mt-1 text-xs text-gray-400">
                  Connect Systems
                </p>
              </div>
            </div>
          </a>

          <!-- Service Card 3: Automation -->
          <a
            href="/services/process-automation"
            class="bg-dark-blue hover:border-primary absolute top-79 right-15 bottom-0 flex h-32 w-38 flex-col items-start justify-center border-2 border-white px-4 py-4 shadow-lg transition-all"
          >
            <div class="flex flex-col items-start gap-3">
              <div class="flex shrink-0 flex-col items-center justify-center">
                <Image
                  src={AutomationIcon}
                  alt="Automation Icon"
                  class="h-10 w-10"
                />
              </div>
              <div class="flex flex-col">
                <h3
                  class="font-headline text-sm leading-tight font-bold text-white"
                >
                  AUTOMATION
                </h3>
                <p class="font-supporting mt-1 text-xs text-gray-400">
                  Streamline Processes
                </p>
              </div>
            </div>
          </a>

          <!-- Wave Object -->
          <div
            class="absolute top-30 left-0 z-15 block h-auto w-full md:hidden"
          >
            <Image
              src={WaveObject}
              alt="Wave Object"
              class="h-auto w-full object-contain object-top"
              width={800}
            />
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- insert services component at the bottom of this section -->
  <Services />
</section>
